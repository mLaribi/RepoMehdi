<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youssef.goclimber.InfoParcours">

    <TextView
        android:textSize="@dimen/size_app_name"
        android:textColor="@color/appNameColor"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblFicheParcours"
        android:id="@+id/lblFicheParcours"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:paddingTop="30dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rouge"
        android:id="@+id/txtCouleurParcours"
        android:layout_below="@+id/txtOuvreurInfo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="20dp"
        android:paddingTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ouverture : 10/06/16"
        android:id="@+id/txtDateOuvertureParcours"
        android:layout_below="@+id/txtCouleurParcours"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:isIndicator="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarInfoParcours"
        android:layout_below="@+id/txtDateOuvertureParcours"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="15dp"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du parcours ici"
        android:id="@+id/txtNomParcoursInfo"
        android:layout_below="@+id/lblFicheParcours"
        android:layout_centerHorizontal="true" />

    <TextView
        android:paddingTop="30dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ouvreur"
        android:id="@+id/txtOuvreurInfo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtNomParcoursInfo" />

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier critique"
        android:id="@+id/textView3"
        android:layout_below="@+id/ratingBarInfoParcours"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarModifCritique"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:id="@+id/btnModifCritique"
        android:layout_below="@+id/ratingBarModifCritique"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
